{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strictNullChecks": true,
    "allowJs": true,
    "noEmit": true
  }
}
